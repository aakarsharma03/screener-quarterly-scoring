{
    "manifest_version": 3,
    "name": "Screener Quarterly Scoring Calculator",
    "version": "1.0",
    "description": "Calculate quarterly performance scores for companies on Screener.in based on financial metrics and ratios.",
    "permissions": ["scripting", "activeTab"],
    "content_scripts": [
      {
        "matches": ["https://www.screener.in/company/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["template.xlsx"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  